@page "/admin/ranks/{r}/edit"
@{
    Layout = "admin";
}
@model RankEditModel

<form class="mt-3" method="post">
	<div class="row">
		<div class="col">
			<div class="input-group">
				<div class="input-group-prepend">
					<div class="input-group-text">Name</div>
				</div>
				<input type="text" class="form-control" placeholder="Name" name="name" value="@Model.rank.name">
			</div>
		</div>
		<div class="col">
						<div class="input-group">
				<div class="input-group-prepend">
					<div class="input-group-text">Color</div>
				</div>
				<input type="text" class="form-control" placeholder="Name" name="color" value="@Model.rank.color">
			</div>
		</div>
	</div>
  <div class="row mt-2">
		<div class="col-auto my-1">
			<div class="form-check">
				<input class="form-check-input" type="checkbox" name="post" checked="@Model.rank.post">
				<label class="form-check-label">
					Can post
				</label>
			</div>
		</div>
  </div>
    <div class="row mt-2">
		<div class="col-auto my-1">
			<div class="form-check">
				<input class="form-check-input" type="checkbox" name="edit" checked="@Model.rank.edit">
				<label class="form-check-label">
					Can edit
				</label>
			</div>
		</div>
  </div>
    <div class="row mt-2">
		<div class="col-auto my-1">
			<div class="form-check">
				<input class="form-check-input" type="checkbox" name="delete" checked="@Model.rank.delete">
				<label class="form-check-label">
					Can delete
				</label>
			</div>
		</div>
  </div>
    <div class="row mt-2">
		<div class="col-auto my-1">
			<div class="form-check">
				<input class="form-check-input" type="checkbox" name="controlPanel" checked="@Model.rank.controlPanel")>
				<label class="form-check-label">
					Control Panel Access
				</label>
			</div>
		</div>
  </div>

  <button type="submit" class="btn btn-outline-primary">Save</button>
</form>