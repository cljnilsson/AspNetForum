<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - aspnetcoreapp</title>

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

	<link href="~/lib/fontawesome/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
	<link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/css/bootstrap_override.css" />

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header class="pb-3">
        <nav class="navbar navbar-expand-md">
			<div class="container-fluid" id="navbar-container">
				<a class="navbar-brand" href="/">
					<img id="logo" class="img-fluid" src="~/images/logo.png" alt="Navigation bar brand logo">
				</a>
					<form class="input-group w-25" action="/search">
						<input type="text" name="q" class="form-control" placeholder=".....">
						<div class="input-group-append">
							<button class="btn btn-outline-primary" type="submit"><i class="fas fa-search"></i> Search</button>
						</div>
					</form>
			</div>
		</nav>
		<div class="row no-gutters">
			<div class="col">
				<div class="navbar navbar-expand-sm" id="subnavLeft">
					<ul class="navbar-nav">
						<li class="nav-item active">
							<a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Features</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Pricing</a>
						</li>
					</ul>
				</div>
			</div>
			<div class="col">
				<div class="ml-auto pr-0 d-flex flex-row-reverse align-items-center" id="subnavRight">
					@{
						var user = new Byte[20];
						var exists = Context.Session.TryGetValue("username", out user);
						if(exists) {
							<button class="btn btn-sm btn-outline-primary">Logout</button>
						} else {
							<button id="log" class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#loginModal">Login</button>
							<partial name="loginmodal"/>
							<a href="/register"><button class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#registerModal">Register</button></a>
						}
					}
				</div>
			</div>
		</div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-white pt-3">
        <div class="container text-center">
            &copy; 2020 - Cool Company - Made by Lukas Nilsson - <a href="https://github.com/cljnilsson/AspNetForum"><i class="fab fa-github"></i></a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
