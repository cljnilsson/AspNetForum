@using Microsoft.AspNetCore.Http
<header class="pb-3">
	<nav class="navbar navbar-expand-md">
		<div class="container-fluid" id="navbar-container">
			<a class="navbar-brand" href="/">
				<img id="logo" class="img-fluid" src="~/images/logo.png" alt="Navigation bar brand logo">
			</a>
				<form class="input-group w-25" action="/search">
					<input type="text" name="q" class="form-control" placeholder=".....">
					<div class="input-group-append">
						<button class="btn btn-outline-primary" type="submit"><i class="fas fa-search"></i> Search</button>
					</div>
				</form>
		</div>
	</nav>
	<div class="row no-gutters">
		<div class="col">
			<div class="navbar navbar-expand-sm" id="subnavLeft">
				<ul class="navbar-nav">
					<li class="nav-item active">
						<a class="nav-link" href="/">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/news">News</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/members">Members</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="col">
			<div class="ml-auto pr-0 d-flex flex-row-reverse align-items-center" id="subnavRight">
				@{
					var user = new Byte[20];
					var exists = Context.Session.TryGetValue("username", out user);
					if(exists) {
						<button class="btn btn-sm btn-outline-primary mr-2 ml-2">Logout</button>
						<a href="/profile/@Context.Session.GetString("username")"><button class="btn btn-sm btn-outline-primary">My Profile</button></a>
					} else {
						<button id="log" class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#loginModal">Login</button>
						<partial name="loginmodal"/>
						<a href="/register"><button class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#registerModal">Register</button></a>
					}
				}
			</div>
		</div>
	</div>
</header>