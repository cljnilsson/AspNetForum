@page

<script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>

<link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

<input type="text" class="form-control mt-3 threadheader" placeholder="Thread Name">
<div id="editor-container" style="height: 300px">

</div>

<button class="btn btn-outline-light mt-3">Create Thread</button>

<script>
	let options = {
		modules: {
			toolbar: [
				[{ header: [1, 2, false] }],
				['bold', 'italic', 'underline'],
				['image', 'code-block']
			]
		},
		theme: 'snow'  // or 'bubble'
	}
	var quill = new Quill('#editor-container', options)
</script>