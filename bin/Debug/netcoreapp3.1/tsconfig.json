{
	"compileOnSave": true,
	"allowJs": true,
	"compilerOptions": {
	  "noImplicitAny": false,
	  "noEmitOnError": true,
	  "removeComments": true,
	  "allowSyntheticDefaultImports": true,
	  "sourceMap": false,
	  "module": "es6",
	  "target": "es5",
	  "outDir": "wwwroot/js",
	  "typeRoots": [
		"./node_modules/@types",
	  ],
	  "types": ["jquery"],
	  "lib": [
        "es5",
		"es2015",
		"DOM"
    ],
	},
	"include": [
	  "ts/**/*"
	]
}